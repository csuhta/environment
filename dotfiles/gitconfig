[core]
editor = mate --wait --line 1 --name 'Git Commit Message'
excludesfile = ~/.gitignore
autocrlf = input
filemode = false
ignorecase = false

[color]
ui = true

[alias]
aa = add --all
assume = update-index --assume-unchanged
b = branch --all --verbose --verbose # Sending the option twice is not a typo
c = checkout
del = branch --delete
delete = branch --delete
hub = "!git-hub"
issue = "!git-issue"
issues = "!git-issues"
l = log -4
m = commit
new = checkout -b
s = status --short --branch
unassume = update-index --no-assume-unchanged
up = "!git remote update -p; git merge --ff-only @{u}"

[gpg]
program = /usr/local/bin/gpg-proxy

[status]
relativepaths = false

[push]
default = matching

[pull]
ff = only

[transfer]
fsckobjects = true

[fetch]
fsckobjects = true

[receive]
fsckObjects = true
