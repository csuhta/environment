# encoding: utf-8

require "rubygems"
require "irb/completion"

# Turn on Awesome Print

begin
  require "awesome_print"
  AwesomePrint.irb!
rescue LoadError => err
  warn "Couldnâ€™t load awesome_print. Is it installed? #{err}"
end

# Custom prompt

color_start = "\e[31m" # dark red
color_stop  = "\e[0m"

IRB.conf[:PROMPT][:CSUHTA] = {
  PROMPT_I: "#{color_start}>>#{color_stop} ",
  PROMPT_S: "#{color_start}**#{color_stop} ",
  PROMPT_C: "#{color_start}**#{color_stop} ",
  PROMPT_N: "#{color_start}**#{color_stop} ",
  RETURN:   "#{color_start}=>#{color_stop} %s\n" ,
}

IRB.conf[:PROMPT_MODE] = :CSUHTA

# History settings

IRB.conf[:EVAL_HISTORY] = 1000
IRB.conf[:SAVE_HISTORY] = 1000
IRB.conf[:HISTORY_FILE] = File::expand_path("~/.irbhistory")

# Enhance Object to allow inspecting methods more cleanly

class Object
  def interesting_methods
    case self.class
    when Class
      self.public_methods.sort - Object.public_methods
    when Module
      self.public_methods.sort - Module.public_methods
    else
      self.public_methods.sort - Object.new.public_methods
    end
  end
end

# Shorthand to stop echoing output

def echo_toggle
  irb_context.echo ? irb_context.echo = false : irb_context.echo = true
end

def shutup
  irb_context.echo = false
end
