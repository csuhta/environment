#!/usr/bin/env ruby
# encoding: utf-8

puts "Installing favorite tools..."

fav_tools = %w[
  git
  imagemagick
  jpeg
  openssl
  pngcrush
  rbenv
  ruby-build
  ssh-copy-id
  tree
  wget
]

system "brew update"
system "brew install #{fav_tools.join(" ")}"
system "brew upgrade"

# Use the newest OpenSSL and Mozilla certs
system "brew link openssl --force"
system "brew install curl-ca-bundle"

# Install Heroku Toolbelt and heroku-repo
system "wget -qO- https://toolbelt.heroku.com/install.sh | sh"
system "heroku plugins:install https://github.com/heroku/heroku-repo.git"

puts "Tools installed âœ”"
