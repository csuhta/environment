#!/usr/bin/env ruby
# encoding: utf-8

puts "Installing favorite tools..."

fav_packages = %w[
  git
  imagemagick
  jpeg
  openssl
  pngcrush
  ruby-install
  chruby
  ssh-copy-id
  tree
  wget
]

system "brew update"
system "brew install #{fav_packages.join(" ")}"

# Install Ruby dependencies
system "brew install readline gdbm libyaml openssl"
system "brew link openssl --force"

# Just check one more time...
system "brew upgrade"

puts "Tools installed âœ”"
puts "You should now install the Heroku toolbelt and then run"
puts "heroku login"
puts "heroku plugins:install https://github.com/heroku/heroku-repo.git"
