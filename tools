#!/usr/bin/env ruby

puts "Installing favorite tools..."

fav_packages = %w[
  awscli
  chruby
  ffmpeg
  git
  homebrew/versions/node4-lts
  imagemagick
  jpeg
  openssl
  pngcrush
  ruby-install
  ssh-copy-id
  tree
  wget
  youtube-dl
]

system "brew update"
system "brew install #{fav_packages.join(" ")}"

# Install Ruby dependencies
system "brew install readline gdbm libyaml"

# Just check one more time...
system "brew upgrade --all"

puts "Tools installed âœ”"
puts "You should now install the Heroku toolbelt and then run"
puts "heroku login && hupdate"
